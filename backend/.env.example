# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/lms_futureproof
DB_NAME=lms_futureproof
ENABLE_MONGODB_COMPAT_FALLBACK=true
ENABLE_POSTGRES_RUNTIME=false

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-secret-here
JWT_REFRESH_EXPIRES_IN=7d

# CORS
FRONTEND_URL=http://localhost:3000

# File Upload
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# WebRTC/Live Classes
TURN_SERVER_URL=
TURN_SERVER_USERNAME=
TURN_SERVER_CREDENTIAL=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Code Runner
PISTON_EXECUTE_URL=https://emkc.org/api/v2/piston/execute

# Telemetry / Licensing (Super Admin control-plane integration)
ENABLE_TELEMETRY_HEARTBEAT_CRON=true
TELEMETRY_HEARTBEAT_CRON_SCHEDULE=0 * * * *
APP_BUILD_CHANNEL=stable
LMS_RUNTIME_TYPE=docker
ENABLE_CONTROL_PLANE_SYNC=false
CONTROL_PLANE_URL=
CONTROL_PLANE_API_KEY=
CONTROL_PLANE_SIGNING_SECRET=
POLICY_OFFLINE_GRACE_HOURS=168
STRICT_POLICY_ENFORCEMENT=false
